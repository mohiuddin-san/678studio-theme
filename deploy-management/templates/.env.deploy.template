# =============================================================================
# 678 Studio Deploy Configuration Template
# Copy this to .env.deploy and customize for your environment
# =============================================================================

# SSH Connection Settings
SSH_HOST="sv12345.xserver.jp"
SSH_USER="your_username"
SSH_PORT="22"
COMPANY_SSH_KEY="~/.ssh/your_deploy_key"

# Remote Paths
REMOTE_PATH="/home/your_username/domain.com/public_html"
REMOTE_WP_PATH="/home/your_username/domain.com/public_html/wp-content/themes/678studio"

# Database Settings (for full deploy)
# Local Database
LOCAL_DB_HOST="localhost"
LOCAL_DB_NAME="wordpress_678"
LOCAL_DB_USER="wordpress"
LOCAL_DB_PASS="wordpress"

# Remote Database
REMOTE_DB_HOST="mysql123.xserver.jp"
REMOTE_DB_NAME="your_db_name"
REMOTE_DB_USER="your_db_user"
REMOTE_DB_PASS="your_db_password"

# URL Replacement (for database deployment)
LOCAL_URL="http://localhost:8080"
REMOTE_URL="https://your-domain.com"

# Backup Settings
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS="30"
ENABLE_AUTO_BACKUP="true"

# Deployment Options
DEPLOY_TIMEOUT="300"
MAX_RETRIES="3"
ENABLE_COMPRESSION="true"

# File Permissions
DIR_PERMISSIONS="755"
FILE_PERMISSIONS="644"
UPLOADS_PERMISSIONS="777"

# Exclude Patterns (comma-separated)
EXCLUDE_PATTERNS="node_modules/,*.log,.git/,.DS_Store,Thumbs.db"

# Notification Settings (optional)
NOTIFY_EMAIL=""
SLACK_WEBHOOK=""