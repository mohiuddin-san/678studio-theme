// AJAX handler for getting studio shops list
function handle_get_studio_shops_list() {
    // Get cached studio data using unified system
    if (function_exists('get_cached_studio_data')) {
        $data = get_cached_studio_data();
        
        if (isset($data['error'])) {
            wp_send_json_error(['message' => $data['error']]);
        } else {
            wp_send_json_success($data);
        }
    } else {
        wp_send_json_error(['message' => 'Unified API system not available']);
    }
}

// Handle cache clearing
function handle_clear_studio_cache() {
    // Clear cached studio data using unified system
    if (function_exists('clear_studio_data_cache')) {
        clear_studio_data_cache();
        wp_send_json_success(['message' => 'Cache cleared successfully']);
    } else {
        wp_send_json_error(['message' => 'Cache clear function not available']);
    }
}

