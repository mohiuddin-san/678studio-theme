  "excludePatterns": {
    "common": [
      "node_modules/",
      "*.log",
      ".git/",
      "*.tmp",
      "cache/",
      "temp/"
    ],
    "development": [
      ".DS_Store",
      "Thumbs.db",
      "*.swp",
      "*.swo",
      ".vscode/",
      ".idea/"
    ],
    "wordpress": [
      "wp-content/uploads/cache/",
      "wp-content/debug-logs/",
      "wp-content/backup*/",
      "wp-config-sample.php"
    ],
    "docker": [
      "docker-compose.override.yml",
      ".env.local"
    ]
  },
  "restore": {
    "stopDockerFirst": true,
    "backupCurrentFirst": true,
    "restoreSteps": [
      "Stop Docker containers",
      "Backup current state (optional)",
      "Copy files from backup",
      "Start Docker containers",
      "Verify site functionality"
    ]
  },
  "notifications": {
    "onSuccess": true,
    "onError": true,
    "email": null,
    "webhook": null
  },
  "monitoring": {
    "logBackupOperations": true,
    "logLocation": "../logs/backup-operations.log",
    "includeTiming": true,
    "includeFileCount": true
  },
  "metadata": {
    "version": "1.0.0",
